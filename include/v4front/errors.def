// V4-front error codes definition
// Usage: Define V4FRONT_ERR(name, val, msg) before including this file
//
// Error code convention:
//   0           = success
//   negative    = error
//
// name, value, message
V4FRONT_ERR(OK,                     0,  "ok")
V4FRONT_ERR(UnknownToken,          -1, "unknown token")
V4FRONT_ERR(InvalidInteger,        -2, "invalid integer format")
V4FRONT_ERR(OutOfMemory,           -3, "out of memory")
V4FRONT_ERR(BufferTooSmall,        -4, "buffer too small")
V4FRONT_ERR(EmptyInput,            -5, "empty input")
V4FRONT_ERR(ControlDepthExceeded,  -6, "control structure nesting too deep")
V4FRONT_ERR(ElseWithoutIf,         -7, "ELSE without matching IF")
V4FRONT_ERR(DuplicateElse,         -8, "duplicate ELSE in IF structure")
V4FRONT_ERR(ThenWithoutIf,         -9, "THEN without matching IF")
V4FRONT_ERR(UnclosedIf,           -10, "unclosed IF structure")
V4FRONT_ERR(UntilWithoutBegin,    -11, "UNTIL without matching BEGIN")
V4FRONT_ERR(UnclosedBegin,        -12, "unclosed BEGIN structure")
V4FRONT_ERR(WhileWithoutBegin,    -13, "WHILE without matching BEGIN")
V4FRONT_ERR(DuplicateWhile,       -14, "duplicate WHILE in BEGIN structure")
V4FRONT_ERR(RepeatWithoutBegin,   -15, "REPEAT without matching BEGIN")
V4FRONT_ERR(RepeatWithoutWhile,   -16, "REPEAT without matching WHILE")
V4FRONT_ERR(UntilAfterWhile,      -17, "UNTIL cannot be used after WHILE")
V4FRONT_ERR(AgainWithoutBegin,    -18, "AGAIN without matching BEGIN")
V4FRONT_ERR(AgainAfterWhile,      -19, "AGAIN cannot be used after WHILE")
V4FRONT_ERR(LoopWithoutDo,        -20, "LOOP without matching DO")
V4FRONT_ERR(PLoopWithoutDo,       -21, "+LOOP without matching DO")
V4FRONT_ERR(UnclosedDo,           -22, "unclosed DO structure")
V4FRONT_ERR(LeaveWithoutDo,       -23, "LEAVE without matching DO")
V4FRONT_ERR(LeaveDepthExceeded,   -24, "too many LEAVE statements in DO loop")
V4FRONT_ERR(ColonWithoutName,     -25, ": without word name")
V4FRONT_ERR(SemicolonWithoutColon,-26, "; without matching :")
V4FRONT_ERR(UnclosedColon,        -27, "unclosed : structure")
V4FRONT_ERR(DuplicateWord,        -28, "duplicate word name")
V4FRONT_ERR(DictionaryFull,       -29, "dictionary full")
V4FRONT_ERR(NestedColon,          -30, "nested : not allowed")
V4FRONT_ERR(MissingSysId,         -31, "SYS without ID")
V4FRONT_ERR(InvalidSysId,         -32, "SYS ID out of range (0-255)")
V4FRONT_ERR(MissingLocalIdx,      -33, "L++ or L-- without local variable index")
V4FRONT_ERR(InvalidLocalIdx,      -34, "local variable index out of range (0-255)")